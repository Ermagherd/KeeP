include includes/header.pug
body
  include includes/nav.pug

  .ui.grid
    .stretched.row
      .three.wide.column
      .ten.wide.column
        #warningMessage
        if (typeof message !== 'undefined')
          p= message
        h1 Créer un compte
        form.ui.form.login.segment(method='POST' action="/account/signup" name='signup-form')
          p Votre mot de passe doit contenir au minimum 8 caractères et posséder une majuscule, une minuscule, un nombre et un caractère spécial.
          .three.fields
            .field
              label Prénom
              input(placeholder='Prénom' name='firstName' type='text' value='')
            .field
              label Nom
              input(placeholder='Nom' name='lastName' type='text' value='')
            .field
              label Pseudo
              input(placeholder='Pseudo' name='username' type='text' value='')
          .three.fields
            .field
              label Email
              input(placeholder='Email' type='email' name='email' value='')
            .field
              label Mot de passe
              input(placeholder='Mot de passe' type='password' name='password' value='')
            .field
              label Confirmez votre mot de passe
              input(placeholder='Confirmez votre mot de passe' type='password' name='passwordConfirmation' value='')
          .ui.primary.submit.button Submit
          .ui.error.message
      .three.wide.column